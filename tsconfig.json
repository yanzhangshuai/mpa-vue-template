{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"baseUrl": "./",
		"moduleResolution": "node",
		"noEmitOnError": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"isolatedModules": true,
		"removeComments": true,
		"jsx": "preserve",
		"jsxFactory": "h",
		"experimentalDecorators": true,
		"strictFunctionTypes": true,
		"resolveJsonModule": true,
		"declaration": false,
		"forceConsistentCasingInFileNames": true,
		"paths": {
		  "module-a/*":             ["src/module/module-a/*"],
		  "module-b/*":             ["src/module/module-b/*"],
		  "component/*":            ["src/component/modules/*"],
		  "directive/*":            ["src/directive/modules/*"],
		  "@/*":                    ["src/*"]
		},
		"sourceMap": false,
		"downlevelIteration": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"types": ["node", "vite/client", "vitest/globals", "@mwjz/utils/globals"],
		"typeRoots": ["node_modules/@types"],
		"lib": ["dom", "ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020", "esnext", "dom.iterable"]
	},
	"exclude": ["node_modules", "build", "src/asset/json/*.json", "src/**/script"],
	"include": [
		"src/**/*.ts",
		"src/**/*.js",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"type/**/*.d.ts",
		"test/**/*.ts"
	]
}
